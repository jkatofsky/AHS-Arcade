<!DOCTYPE html>
<html lang="en" dir="ltr">

	<head>
		
		<title>AHS Arcade - High Scores</title>
        <% include partials/global_header_info %>

    </head>
    
    <body>
		<div class="body-content">
            <h1>All High Scores</h1>
            <p><a href = "/">back to home</a></p>
		</div>
		<hr>
		<div class="body-content">
            <div id="all-high-scores">
                <div id = "all-snake-scores">
                    <h2><u>Snake:</u></h2>
                    <table>
                    <% for (var i = 0; i < snakeScores.length; i ++){ %>
                        <tr>
                            <th><%= i+1 %>.</th>
                            <th><%= snakeScores[i].initials %></th>
                            <th><%= snakeScores[i].score %></th>
                            <th>[<%= snakeScores[i].date %>]</th>
                        </tr>
                    <% } %> 
                    </table>
                </div>
                <div id = "all-tetris-scores">
                    <h2><u>Tetris:</u></h2>
                    <table>
                    <% for (var i = 0; i < tetrisScores.length; i ++){ %>
                        <tr>
                            <th><%= i+1 %>.</th>
                            <th><%= tetrisScores[i].initials %></th>
                            <th><%= tetrisScores[i].score %></th>
                            <th>[<%= tetrisScores[i].date %>]</th>
                        </tr>
                    <% } %> 
                    </table>
                </div>
                <div id = "all-asteroids-scores">
                    <h2><u>Asteroids:</u></h2>
                    <table>
                    <% for (var i = 0; i < asteroidsScores.length; i ++){ %>
                        <tr>
                            <th><%= i+1 %>.</th>
                            <th><%= asteroidsScores[i].initials %></th>
                            <th><%= asteroidsScores[i].score %></th>
                            <th>[<%= asteroidsScores[i].date %>]</th>
                        </tr>
                    <% } %> 
                    </table>
                </div>
            </div>
        </div>
	</body>

	<% include partials/global_footer %>

</html>